<style>
  .btn-search {
    background-color: #004c4c;
    color: aliceblue;
  }

  .btn-search:hover {
    background-color: #b68b2b;
  }

  .custom-logo-text {
    font-family: "Georgia", serif;
    font-size: 28px;
    font-weight: bold;
    color: #004c4c;
    letter-spacing: 1px;
    text-transform: uppercase;
    margin-left: 0;
    transition: color 0.3s ease;
  }

  .custom-logo-text:hover {
    color: #b68b2b;
    text-decoration: none;
  }

  .nav-btn {
    padding: 0.8rem 1.5rem;
    border-radius: 50px; /* pill shape */
    font-size: 1rem;
    font-weight: 500;
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-left: 0.5rem;
  }

  .nav-btn.add {
    font-family: "Georgia", serif;
    background-color: #004c4c;
    color: aliceblue;
  }

  .nav-btn.logout {
    font-family: "Georgia", serif;
    background-color: #004c4c;
    color: aliceblue;
    width: 7rem;
  }

  .nav-btn.add:hover,
  .nav-btn.logout:hover {
    background-color: #b68b2b;
    color: #222;
    border-color: #b68b2b;
  }
</style>

<nav class="navbar navbar-expand-lg bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link custom-logo-text" href="/listings">Wanderlust</a>
      </div>

      <div class="navbar-nav ms-auto">
        <form class="d-flex ms-auto me-3" role="search">
          <input class="form-control me-2" type="search" placeholder="Search" />
          <button
            class="btn btn-search d-inline-flex align-items-center gap-2"
            type="submit"
          >
            <i class="fa-solid fa-magnifying-glass"></i>
            <span>Search</span>
          </button>
        </form>
      </div>

      <div class="navbar-nav ms-auto">
        <a class="nav-btn add" href="/listings/new">âž• Add New Listing</a>

        <% if (currUser) { %>
        <a class="nav-btn logout" href="/">Log Out</a>
        <% } %>
      </div>
    </div>
  </div>
</nav>
