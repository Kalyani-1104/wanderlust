<% layout("public/layouts/boilerplate") %> <%- include("filter.ejs") %>
<style>
  .tax-toggle {
    display: none;
  }
</style>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% for(let list of allListings) { %>
  <a href="/listings/<%= list._id %>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%= list.image.url %>"
        class="card-img-top"
        alt="error"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-title"><b><%= list.title %></b></p>
        <!-- <p class="card-description"><%= list.description %></p> -->
        <p class="card-price">
          <%= list.price.toLocaleString('en-IN', { style: 'currency', currency:
          'INR' }) %>/night
          <i class="tax-toggle">&nbsp;&nbsp;+18% GST</i>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>
