<% layout("public/layouts/boilerplate") %>
<div class="row">
  <div class="col-6">
    <h2 class="mt-3">Welcome to Wanderlust!!</h2>
    <form action="/signup" method="post" novalidate class="needs-validation">
      <div class="mb-3 mt-3">
        <label for="u_name" class="form-label">Username:</label>
        <input
          type="text"
          name="username"
          class="form-control"
          id="u_name"
          required
        />
        <div class="valid-feedback">Data saved successfully!</div>
        <div class="invalid-feedback">Enter a valid data</div>
      </div>
      <div class="mb-3 mt-3">
        <label for="u_email" class="form-label">Email:</label>
        <input
          type="email"
          name="email"
          placeholder="name@example.com"
          class="form-control"
          id="u_email"
          required
        />
        <div class="valid-feedback">Data saved successfully!</div>
        <div class="invalid-feedback">Enter a valid data</div>
      </div>
      <div class="mb-3 mt-3">
        <label for="password" class="form-label">Password:</label>
        <input
          type="password"
          name="password"
          class="form-control"
          id="password"
          required
        />
        <div class="valid-feedback">Data saved successfully!</div>
        <div class="invalid-feedback">Enter a valid data</div>
      </div>

      <button type="submit" class="btn btn-outline-success">Submit</button>
    </form>
  </div>
</div>
